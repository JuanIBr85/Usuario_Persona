FROM python:3.11-slim

# Instala cron, pg_dump y pip (pip ya está por defecto, pero aseguramos)
RUN apt-get update && \
    apt-get install -y cron postgresql-client && \
    pip install --no-cache-dir python-dotenv && \
    apt-get clean

WORKDIR /app

# Copia scripts de backup
COPY backup_inicial.py /app/backup_inicial.py
COPY backup_diario.py /app/backup_diario.py

# Copia cronjobs al sistema
COPY cronjobs/*.cron /etc/cron.d/

# Permisos y activación de cronjobs
RUN chmod 0644 /etc/cron.d/*.cron && \
    crontab /etc/cron.d/backup_inicial.cron && \
    crontab -u root /etc/cron.d/backup_diario.cron

# Start cron daemon
CMD ["cron", "-f"]
