# Configuración de la aplicación
FLASK_APP=run.py
FLASK_ENV=development

# Configuración de la base de datos
# SQLite (por defecto)
SQLALCHEMY_DATABASE_URI=sqlite:///components.db

# Configuración para MySQL (descomentar y configurar si se usa MySQL)
# MYSQL_USER=usuario_db
# MYSQL_PASSWORD=contraseña_segura
# MYSQL_HOST=localhost
# MYSQL_PORT=3306
# MYSQL_DATABASE=nombre_base_datos
# SQLALCHEMY_DATABASE_URI=mysql+pymysql://${MYSQL_USER}:${MYSQL_PASSWORD}@${MYSQL_HOST}:${MYSQL_PORT}/${MYSQL_DATABASE}

# Configuración JWT
JWT_SECRET_KEY=clave_secreta_muy_larga_y_segura_aqui
JWT_ACCESS_TOKEN_EXPIRES=3600  # 1 hora en segundos

# Configuración de servicios
SERVICES_CONFIG_FILE=app/config/services-dev.json
